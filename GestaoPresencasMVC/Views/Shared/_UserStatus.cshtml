@if (User.Identity.IsAuthenticated)
{
    <span>Welcome, <strong>@ViewBag.CurrentUserName</strong></span>

    @if (ViewBag.DocenteId != null)
    {
        <span>, Docente</span>
    }
    @if (ViewBag.AlunoId != null)
    {
        <span>, Aluno</span>
    }
    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
        <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
    </form>
}
else
{
    <a asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Url.Page("/", new { area = "" })" class="btn btn-link text-dark">Login</a>
}