@model IEnumerable<GestaoPresencasMVC.Models.Uc>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCursoNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdDocenteNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCursoNavigation.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdDocenteNavigation.Nome)
            </td>
            <td>
                    @if (ViewBag.DocenteId == item.IdDocenteNavigation.Id)
                {
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit  </a>
                    <a>|</a>
                }
                   
                 <a asp-action="Details" asp-route-id="@item.Id">Details  </a> 
                                        
                @if (ViewBag.DocenteId == item.IdDocenteNavigation.Id)
                    {
                        <a>|</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete  </a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
