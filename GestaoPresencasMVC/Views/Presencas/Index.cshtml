@model IEnumerable<GestaoPresencasMVC.Models.Presenca>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Presente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdAlunoNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdAulaNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Presente)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.IdAlunoNavigation.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdAulaNavigation.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
